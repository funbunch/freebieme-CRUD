  <% if (locals.logout) { %>
      <script>
          localStorage.clear()
      </script>
  <% } %>
  <script>
      let user = localStorage.getItem('user')
      console.log(user)
      if (user) {
          document.getElementById('logout').innerHTML = "<a href='/logout'>Logout</a>"
      }
  </script>

