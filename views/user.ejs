<div class="container text-center">
  <h1 id="user"></h1>
  <%- include( 'partials/navbar') %>
  <script>
    if (!localStorage.getItem('user')) {
        let user = "<%- username %>"
        localStorage.setItem('user', user)
    }
    let currentUser = localStorage.getItem('user')
    console.log(`User logged in: ${currentUser}`)
    console.log(locals.username)
</script>
  <% if (!locals) { %>
  <script>
    let currentUser = localStorage.getItem('user')
    document.getElementById('user').innerText = `ðŸ‘‹ Hello, ${currentUser}`
    //document.getElementById('userInput').value = currentUser
    console.log(`User logged in: ${currentUser}`)
    console.log(`HERE`)
  </script>
  <% } else { %>
  <h1>ðŸ‘‹ Continue here, <%= username %></h1>
  <h3>Select Category of item</h3>
  
  <form enctype="multipart/form-data" method="POST" action="/item/:id">
    <input id="userInput" type="hidden" name="username" value="<%= username %>">
    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="category">
      <option selected>Category</option>
      <option value="1">Electronics & Media</option>
      <option value="2">Home &amp; Garden</option>
      <option value="3">Clothing &amp; Accessories</option>
      <option value="4">Baby &amp; Kids</option>
      <option value="5">Vehicles</option>
      <option value="6">Toys, Games, &amp; Hobbies</option>
      <option value="7">Sports &amp; Outdoors</option>
      <option value="8">Collectibles &amp; Art</option>
      <option value="9">Pet supplies</option>
      <option value="10">Health &amp; Beauty</option>
    </select>
    <label>Name of item:</label>
    <input type="text" name="product"/><br>
    <input type="file" name="image"><br>
    <input type="submit" class="btn btn-primary">
  </form>

  <div class="album py-5 bg-light">
    <div class="container">
  
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <p class="card-title">
                <% foundItems.forEach(item  => { %>
                  <p class="card-text"><%= item.product %></p>
                  <p class="card-text"><%= item.category %></p>
                  <%- item.image %>
                  <form method="POST" action='/item/<%= item.id %>/user/<%= userId %>/?_method=DELETE'>
                    <input class="btn btn-dark" type="submit" value="Delete <%= item.id %>">
                  </form>          
              <% }) %>
              
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        
  
      </div>
    </div>
  </div>
  
</div>
<% } %>